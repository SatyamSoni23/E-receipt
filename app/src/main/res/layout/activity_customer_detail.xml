<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopFirstDetail"
    android:background="@drawable/paper">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:text="E-Receipt"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic|bold"
            android:fontFamily="cursive"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="20sp"
            android:gravity="center|bottom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>
        <EditText
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_marginHorizontal="35dp"
            android:hint="Customer Name"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/customerMobile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_marginHorizontal="35dp"
            android:hint="Mobile No."
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/customerAddress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_marginHorizontal="35dp"
            android:hint="Address"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/customerPincode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_marginHorizontal="35dp"
            android:hint="Pincode"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/customerEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_marginHorizontal="35dp"
            android:hint="Customer Email"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />
        <EditText
            android:id="@+id/otherDetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_marginHorizontal="35dp"
            android:hint="Other Details"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="horizontal"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.25"/>
            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:background="@drawable/anibutton"
                android:stateListAnimator="@animator/button_state_list_anim"
                android:gravity="center"
                android:text="Next"
                android:fontFamily="monospace"
                android:textColor="#FFFFFF"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeMinTextSize="10sp"
                android:textStyle="italic" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.25"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>